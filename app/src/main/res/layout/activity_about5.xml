<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutSwipeActivity">

    <TextView
        android:id="@+id/txtCreditTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/aboutCreditTitle"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCreditDescription"
        android:layout_width="338dp"
        android:layout_height="0dp"
        android:text="@string/aboutCreditText"
        app:layout_constraintStart_toStartOf="@+id/txtCreditTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtCreditTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
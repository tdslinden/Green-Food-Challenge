<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="59dp"
        android:text="@string/calorie_intro"
        android:textColor="#6B8E23"
        android:textSize="15dp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="51dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCal"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/calorie_calorie"
            android:textColor="#6B8E23"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/input_calorie"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@android:drawable/edit_text"
            android:gravity="center"
            android:hint="cal"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/primary_text_light" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="115dp"
        android:background="#DCDCDC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxMale"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_male" />

        <CheckBox
            android:id="@+id/checkBoxFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_female" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="128dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxAge1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_young" />

        <CheckBox
            android:id="@+id/checkBoxAge2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_adult" />

        <CheckBox
            android:id="@+id/checkBoxAge3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_older" />

        <CheckBox
            android:id="@+id/checkBoxAge4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkBox_senior" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="229dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textWeight"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/calorie_weight"
            android:textColor="#6B8E23"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/weight_input"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="@android:drawable/edit_text"
            android:gravity="center"
            android:hint="lbs"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/primary_text_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="284dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_height"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/calorie_height"
            android:textColor="#6B8E23"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ft_input"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:drawable/edit_text"
            android:layout_marginLeft="15dp"
            android:hint="ft"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="1"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/primary_text_light" />

        <EditText
            android:id="@+id/inch_input"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:drawable/edit_text"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:hint="in"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:selectAllOnFocus="true"
            android:textColor="@android:color/primary_text_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="270dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_activity_level"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_activity_level"
            android:textColor="#6B8E23"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="397dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:text="@string/text_lazy"
            android:gravity="center"
            android:textColor="#6B8E23"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/button_lazy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="117dp"
            android:checked="false"
            android:background="@drawable/lazy"
            android:stateListAnimator="@drawable/button_bg"
            android:textOff=""
            android:textOn=""
            android:textSize="0dp"/>

        <TextView
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="88dp"
            android:gravity="center"
            android:text="@string/text_light"
            android:textColor="#6B8E23"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/button_walking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:background="@drawable/walking"
            android:textOff=""
            android:textOn=""
            android:textSize="0dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="485dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="88dp"
            android:gravity="center"
            android:text="@string/text_super_active"
            android:textColor="#6B8E23"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/button_jogging"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:checked="false"
            android:background="@drawable/active"
            android:layout_marginStart="117dp"
            android:textOff=""
            android:textOn=""
            android:textSize="0dp"/>

        <TextView
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="298dp"
            android:gravity="center"
            android:text="@string/text_moderately"
            android:textColor="#6B8E23"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/button_running"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:background="@drawable/very_active"
            android:textOff=""
            android:textOn=""
            android:textSize="0dp"/>


    </RelativeLayout>

    <Button
        android:id="@+id/button_continue"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#8FBC8F"
        android:text="@string/button_continue" />


</RelativeLayout>